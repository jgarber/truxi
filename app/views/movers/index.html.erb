<h1>Listing movers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile phone</th>
    <th>Availability</th>
    <th>Hourly rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movers.each do |mover| %>
  <tr>
    <td><%= mover.user.name %></td>
    <td><%= mover.user.email %></td>
    <td><%= mover.user.mobile_phone %></td>
    <td><%= mover.availability %></td>
    <td><%= mover.hourly_rate %></td>
    <td><%= link_to 'Show', mover %></td>
    <td><%= link_to 'Edit', edit_mover_path(mover) %></td>
    <td><%= link_to 'Destroy', mover, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

