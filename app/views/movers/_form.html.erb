<%= simple_form_for(@mover, html:{class:'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :range %>
    <%= f.input :availability, input_html:{rows:2} %>
    <%= f.input :hourly_rate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:'btn btn-primary' %>
    <%= link_to 'Cancel', movers_path, class:'btn' %>
  </div>
<% end %>
