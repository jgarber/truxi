<div class="row relative home">
  <div class="hero-unit clearfix">
    <div class="span5">
      <%= image_tag("truck_logo.png", class:'logo') %>
      <h1>Find A Mover</h1>
      <p>The fastest way to find a truck and moving help.</p>
      <p>
        Truxi shows nearby moving company prices, ratings, and photos, so you can pick the service that fits you best.
      </p>
    </div>
  </div>

  <div class="span5 home-form">
    <%= simple_form_for(@move_request) do |f| %>
      <h3>Find A Mover</h3>
      <%= f.simple_fields_for :origin do |origin_fields| %>
        <%= origin_fields.input :address, label:'Origin address' %>
      <%- end -%>
      <%= f.input :date %>

    <% end %>

  </div>

</div>
